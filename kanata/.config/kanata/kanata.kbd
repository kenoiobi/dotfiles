(defsrc)
(deflayermap (base-layer)
    caps @move
    lctl caps
    spc @cspc
    rshift @slash

    lmeta lalt
    lalt (layer-while-held win-layer)

    ;; top row
    q grv ;; quote
    w ,
    e .
    r p
    t y

    y f
    u g
    i c
    o r
    p l

    ;; mid row
    s o
    d e
    f u
    g i

    h d
    j h
    k t
    l n
    scln s ;; รง 

    ;; bottom row
    z / ;; semicolon
    x q
    c j
    v k
    b x

    n b
    , w
    . v
    / z ;; semicolon
    )

(defalias cspc
	(tap-hold-press 100 100 spc (layer-while-held ctrl-layer))
  )

(defalias move
	(tap-hold-press 100 100 esc (layer-while-held move-layer))
  )

(defalias slash
	(tap-hold-press 100 100 RA-q rshift)
  )
(deflayermap (move-layer)
	w up
	a lft
	s down
	d rght
	q home
	e end
	r pgup
	f pgdn
	t pp
	g volu
	b voldwn
	z mwd
	x mwu
	y C-pgup
	h C-pgdn
	rshift RA-w
    )

